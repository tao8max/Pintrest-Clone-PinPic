!!! 5
%html
%head
  %title Pinpic
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  %nav.navbar.navbar-fixed-top
    .container
      .navbar-brand= link_to "PinPic", root_path
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "New Pin", new_pin_path do
            %span.glyphicon.glyphicon-pencil
          %li= link_to "Account", edit_user_registration_path do
            %span.glyphicon.glyphicon-user
          %li- link_to "Sign out", destroy_user_registration_path, method: :delete do
            %span.glyphicon.glyphicon-log-out
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Sign Up", new_user_registration_path do
            %span.glyphicon.glyphicon-plus
          %li= link_to "Log In", new_user_session_path do
            %span.glyphicon.glyphicon-log-in
  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert alert-info"
  = yield